    <style>
        {#esto es para los scrollbar#}
        
        /* width */
        ::-webkit-scrollbar {
            {#width: 10px;#}
            width: 0px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            background: transparent; 
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            {#background: #888;#}
            background: transparent; 
        }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            {#background: #555;#}
            background: transparent; 
        }
    </style>

